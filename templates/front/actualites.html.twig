{% extends 'base.html.twig' %}

{% block title %}Actualités Technologiques{% endblock %}

{% block body %}
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f1f3f6;
        color: #333;
        margin: 0;
        padding: 0;
    }
    .container {
        max-width: 900px;
        margin: 2em auto;
        padding: 2em;
        background-color: #ffffff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        transition: transform 0.3s ease-in-out;
    }
    .container:hover {
        transform: translateY(-10px);
    }
    .header {
        text-align: center;
        margin-bottom: 3em;
    }
    .header h1 {
        font-size: 3em;
        color: #007bff;
        font-weight: 600;
        margin-bottom: 0.5em;
    }
    .header p {
        font-size: 1.2em;
        color: #777;
    }
    .post {
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 1.5em;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        margin-bottom: 1.5em;
        transition: box-shadow 0.3s ease;
    }
    .post:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
    }
    .post h2 {
        font-size: 2em;
        margin-bottom: 1em;
        color: #333;
        font-weight: 500;
    }
    .post p {
        font-size: 1.1em;
        line-height: 1.8;
        color: #555;
    }
    .tags {
        margin-top: 1.5em;
    }
    .tags .badge {
        background-color: #ffc107;
        color: #fff;
        padding: 0.6em 1em;
        border-radius: 30px;
        font-size: 0.9em;
        margin-right: 0.8em;
        transition: background-color 0.3s;
    }
    .tags .badge:hover {
        background-color: #e0a800;
    }
</style>

<div class="container">
    <div class="header">
        <h1>Actualités Technologiques</h1>
        <p>Les dernières nouvelles et tendances du monde de la technologie</p>
    </div>

    {% for post in posts %}
        <div class="post">
            <h2>{{ post.title }}</h2>
            <p>{{ post.content|raw }}</p>
            <div class="tags">
                {% for tag in post.tags %}
                    <span class="badge">{{ tag }}</span>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
